<Window x:Class="UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="405" Width="632" Background="Gainsboro" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="number0" Content="0" HorizontalAlignment="Left" Margin="244,250,0,0" VerticalAlignment="Top" Height="36" Width="40" Click="numberClick"/>
