        <Button x:Name="number2" Content="2" HorizontalAlignment="Left" Margin="244,95,0,0" VerticalAlignment="Top" Height="35" Width="40" Click="numberClick"/>
        <Button x:Name="number3" Content="3" HorizontalAlignment="Left" Margin="303,95,0,0" VerticalAlignment="Top" Height="35" Width="40" Click="numberClick"/>
        <Button x:Name="number4" Content="4" HorizontalAlignment="Left" Margin="184,148,0,0" VerticalAlignment="Top" Height="35" Width="40" Click="numberClick"/>
        <Button x:Name="number5" Content="5" HorizontalAlignment="Left" Margin="244,148,0,0" VerticalAlignment="Top" Height="35" Width="40" Click="numberClick"/>
        <Button x:Name="number6" Content="6" HorizontalAlignment="Left" Margin="303,148,0,0" VerticalAlignment="Top" Height="36" Width="40" Click="numberClick"/>
        <Button x:Name="number7" Content="7" HorizontalAlignment="Left" Margin="184,195,0,0" VerticalAlignment="Top" Height="35" Width="40" RenderTransformOrigin="0.54,0.635" Click="numberClick"/>
